{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {    
        "indent": ["error", 2],
        "@hapi/hapi/scope-start": 0,
        "@hapi/hapi/capitalize-modules": 0,
        "brace-style": 0,
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}
